<h3 class="center button-spacing white-text h-3-spacing"><span class="thin">Edit homework for:</span> <%= @student.name %></h3>
<button class="btn-floating waves-effect waves-light red" name="Cancel" onclick="goBack()">
  <i class="material-icons">cancel</i>
</button>
<span class="button-text white-text">cancel</span>
<div class="row button-spacing white-text">
  <div class="card-bottom">
    <div class="card-panel hoverable">
      <form action="/teacher/homework/edit" method="post">
        <input type="hidden" name="homework" value="<%= @homework.id %>" >
        <input type="hidden" name="student" value="<%= @student.id %>" >
        <div class="row">
          <div class="col s10 offset-s1">
            <h5 class="button-spacing"><strong>Homework Title</strong></h5>
            <div class="input-field col s12">
              <input id="homework_title" type="text" class="validate" name="title" value="<%= @homework.title %>" >
              <label class="active" for="homework_title"></label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s10 offset-s1">
            <h5 class="button-spacing"><strong>Notes from lesson</strong></h5>
            <div class="input-field col s12">
              <input id="lesson_notes" type="text" class="validate" name="note" value="<%= @homework.note %>" >
              <label class="active" for="lesson_notes"></label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s10 offset-s1">
            <h5 class="button-spacing"><strong>Tasks for the homework</strong></h5>
            <div class="button-spacing">
              <ul class="collection blue-grey darken-3">
                <% @homework.tasks.each do |task| %>
                  <li class="`blue-grey darken-3">
                    <div class="input-field col s8">
                      <input id="item<%= task.id %>" type="text" class="validate" name="item<%= task.id %>" value="<%= task.item %>">
                      <label class="active" for="item<%= task.id %>"></label>
                    </div>

                    <div class="input-field col s4">
                      <input id="url<%= task.id %>" type="text" class="validate" name="url<%= task.id %>" value="<%= task.url %>">
                      <label class="active" for="item<%= task.id %>"></label>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="center">
          <button class="btn waves-effect waves-light form-button green" type="submit" name="action" value="submit">
            Update!
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function goBack() {
    //a href="/teacher/students/<%= @student.id %>/homework/<%= @homework.id %>">go back</a>-->
    window.history.go(-1);
  }
</script>
