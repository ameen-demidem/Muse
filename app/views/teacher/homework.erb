<h3 class="center h-3-spacings white-text"><%= @student.name %><span class="thin">'s homework assignments:</span></h3>
<div class="row">
  <div class="col s6 offset-s2">
    <a class="btn-floating waves-effect waves-light green" href="/teacher/students/<%= @student.id %>/homework/new"><i class="material-icons">assignment</i></a>
    <span class="button-text white-text">give them more work!</span>
  </div>
</div>
<ul>
  <% @student.homeworks.map do |homework| %>
    <div class="row">
      <div class="col s10 offset-s1 white-text">
        <div class="card-panel hoverable blue-grey darken-4">
          <% unless homework.tasks.where("complete = ? OR complete IS NULL", false).any? == true %>
              <i class="small material-icons right icon-gold">stars</i>
          <% end %>
          <span class="">
            <blockquote class="">
              <h5 class="thin"><%= homework.title %></h5>
              <p class="thin">
                <%= homework.note %>
              </p>
              <p class="thin">
                <span class="amber-text thick">
                  <%= homework.tasks.where("complete = ? OR complete IS NULL", false).count %>
                </span>
                tasks outstanding
              </p>
            </blockquote>
            <div class="card-action">
              <a class="thin" href="/teacher/students/<%= @student.id %>/homework/<%= homework.id %>">View Homework <i class="material-icons right">send</i></a>
            </div>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</ul>
