<h3 class="center h-3-spacing">
  Congrats, more business!<br>
  <span class="title-comment">(and your parents said music was a dumb choice!)</span>
</h3>

<% if @student.errors.any? %>
  <div>
    <strong>Some issues with your entry, please fix them:</strong>
    <ul>
      <% @student.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col s12">
    <div class="card-panel hoverable">
      <h5 class="center">Add a student</h5>
      <form class="card-padding" method="post" action="/teacher/students">
        <div>
          <label>Student Name:</label>
          <input type="text" name="name" value="<%= @student.name %>">
        </div>
        <div>
          <label>Username:</label>
          <input type="text" name="username" value="<%= @student.username %>">
        </div>
        <div>
          <label>Password:</label>
          <input type="text" name="password" value="<%= @student.password %>">
        </div>
        <div class="center button-spacing">
          <button class="btn waves-effect waves-light" type="submit" name="action" value="Create">
            Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
